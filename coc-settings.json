{
  "typescript.suggestionActions.enabled": true,
  "javascript.suggestionActions.enabled": true,
  "snippets.textmateSnippetsRoots": [
    "~/.config/nvim/snippets"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "json",
    "scss",
    "css",
    "c"
  ],
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "zls": {
      "command": "~/zls/zls",
      "filetypes": ["zig"]
    }
    // clangd configurate itself, if we set it here it might run twice.
    // "clangd": {
    //   "command": "clangd",
    //   "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    //   "filetypes": ["c", "cc", "cpp", "c++"]
    // }
  },
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd"
}
