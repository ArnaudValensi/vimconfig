{
  "typescript.suggestionActions.enabled": true,
  "javascript.suggestionActions.enabled": true,
  "snippets.textmateSnippetsRoots": [
    "~/.config/nvim/snippets"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "json",
    "scss",
    "css",
    "c",
    "cpp"
  ],
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "jai": {
      "command": "jails",
      "filetypes": ["jai"]
    },
    "zls": {
      "command": "~/zls/zls",
      "filetypes": ["zig"]
    }
    // clangd configurate itself, if we set it here it might run twice.
    // "clangd": {
    //   "command": "clangd",
    //   "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    //   "filetypes": ["c", "cc", "cpp", "c++"]
    // }
  },
  // "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/15.0.6/clangd_15.0.6/bin/clangd",
  "inlayHint.enable": false,
  "snippets.ultisnips.pythonPrompt": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
